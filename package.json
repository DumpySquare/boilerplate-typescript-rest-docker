{
  "name": "boilerplate-typescript-rest",
  "version": "0.0.1",
  "description": "Boilerplate for a REST service using TypeScript.",
  "main": "index.js",
  "scripts": {
    "start": "npm run transpile && node ./src/index.js",
    "start:debug": "npm run transpile && node --debug ./src/index.js",
    "start:dev": "nodemon --watch src -L --exec npm run start:debug",
    "transpile": "node ./node_modules/typescript/bin/tsc  --listEmittedFiles",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "mocha ./test/unit/**/*.spec.ts --require ts-node/register",
    "test:integration": "mocha ./test/integration/**/*.spec.ts --require ts-node/register",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefanwalther/boilerplate-typescript-rest.git"
  },
  "keywords": [
    "TypeScript",
    "REST"
  ],
  "author": "Stefan Walther <swrqtch@gmail.com> (http://qliksite.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefanwalther/boilerplate-typescript-rest/issues"
  },
  "homepage": "https://github.com/stefanwalther/boilerplate-typescript-rest#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.10.0",
    "eslint-config-idiomatic": "^2.1.0",
    "mocha": "^3.1.2",
    "supertest": "^2.0.1",
    "ts-node": "^1.7.0",
    "typescript": "^2.0.9",
    "typescript-eslint-parser": "^1.0.0"
  },
  "dependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/express": "^4.0.33",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "body-parser": "^1.15.2",
    "express": "^4.14.0"
  }
}
